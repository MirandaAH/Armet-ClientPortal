<div class="video">
  <video muted autoplay loop src="assets/img/background.mp4" id="video"></video>
</div>
<div class="container">
  <div class="row vertical-offset-100">
    <div class="col-md-4 col-md-offset-4">
      <div class="form panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Please sign in</h3>
        </div>
        <a href="/">Home</a>
        <div class="panel-body">
          <form action="/api/login" method="POST" accept-charset="UTF-8" role="form">
            <fieldset>
              <div class="form-group">
                <input class="form-control" placeholder="User" name="email" type="text">
              </div>
              <div class="form-group">
                <input class="form-control" placeholder="Password" name="password" type="password" value="">
              </div>
              <div class="form-group">
                <select class="userType" name="userType" id="userType">
                  <option disabled>Select One</option>
                  <option value="client">Client</option>
                  <option value="architect">Architect</option>
                </select>
              </div>
              <div class="checkbox">
                <label>
                  <input name="remember" type="checkbox" value="Remember Me"> Remember Me
                </label>
              </div>
              <input class="btn btn-lg btn-default btn-block" type="submit" value="Login">
            </fieldset>
          </form>
          <a href="/signup"></a>
        </div>
      </div>
    </div>
  </div>
</div>
