<link rel="stylesheet" href="css/client-styles.css">
<div class="panel panel-default" style="width: 100%">
    <div class="panel-heading">Logged in as: {{contact.first_name}} {{contact.last_name}}
    </div>
    <div class="panel-body main-body">
        <div class="row">
            <div class="col-lg-4 col-xs-4">
                <div class="panel panel-info file-list">
                    <div class="panel-heading">Files:</div>
                    <div class="panel-body file-list-body">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>File Name</th>
                                    <th>Date Uploaded</th>
                                </tr>
                            </thead>
                            <tbody>
                              {{#each files}}
                                <tr>
                                    <td>{{this.path}}</td>
                                    <td>{{this.createdAt}}</td>
                                </tr>
                              {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class=" col-lg-4 col-xs-4">
                <div class="panel panel-info file-preview">
                    <div class="panel-heading">File Preview:</div>
                    <div class="panel-body ">
                        <div class="preview">
                            <h4>Download File</h4>
                            <button class="btn btn-md upload-btn" type="button">Download</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class=" col-lg-4 col-xs-4">
               <div class="col-lg-12 col-xs-12">
                    <div class="panel panel-info">
                        <div class="panel-heading">Add Comment for *Selected File*:</div>
                        <div class="panel-body file-comments">
                            <div class="form-group">
                                <textarea class="form-control" rows="5" id="comment"></textarea>
                                <button class="btn btn-md" type="button">Submit</button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-12 col-xs-12">
                    <div class="panel panel-info">
                        <div class="panel-heading">Responses</div>
                        <div class="panel-body notes">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>File Name</th>
                                        <th>Architect</th>
                                        <th>Response</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>John</td>
                                        <td>Doe</td>
                                        <td>Doe</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid" style="padding: 0; margin: 0;">
    <div class="row" style="padding:0; margin:0; width: 100%; background-color: #D9EDF7;">
        <div class="col-sm-12 text-center" style="padding: 5px 0; background-color: #87A9A4;">
            <a href="/logout"><button class="btn btn-danger btn-sm">Logout</button></a>
            <a href="/archSettings"><button class="btn btn-danger btn-sm">Settings</button></a>
        </div>
    </div>
</div>
<script src="js/arch-view.js"></script>
